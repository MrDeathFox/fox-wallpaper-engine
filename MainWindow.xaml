<Window x:Class="FoxWallpaperEngine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        
        Title="Fox Wallpaper Engine"
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E2E"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="False">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- App Header -->
        <TextBlock Text="Fox Wallpaper Engine"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#FFFFFF"
                   Margin="0,0,0,15"/>

        <!-- Wallpaper List -->
        <Border Grid.Row="1"
                CornerRadius="10"
                Background="#2B2B3C"
                Padding="10">
            <StackPanel>
                <TextBlock Text="Available Wallpapers"
                           FontSize="18"
                           Foreground="#FFFFFF"
                           Margin="0,0,0,10"/>

                <ListBox x:Name="WallpaperList"
                         Background="#242436"
                         Foreground="White"
                         BorderThickness="0"
                         Height="250"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         SelectionMode="Single">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Margin" Value="0,3"/>
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="Background" Value="#33334A"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Left"
                                                              VerticalAlignment="Center"
                                                              Margin="5"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#4C63FF"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#3A3A5C"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </StackPanel>
        </Border>
        
        <!-- WebView2 -->
        <wv2:WebView2 x:Name="WallpaperPreview"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              Margin="0"
              Source="https://example.com"/>


        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button x:Name="AddWallpaperButton"
                    Content="Add Wallpaper"
                    Width="140" Height="40"
                    Margin="0,0,10,0"
                    Background="#4C63FF"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderBrush="{x:Null}"
                    Cursor="Hand"
                    BorderThickness="0"/>

            <Button x:Name="ApplyButton"
                    Content="Apply Wallpaper"
                    Width="160" Height="40"
                    Background="#00B86B"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderBrush="{x:Null}"
                    Cursor="Hand"
                    BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>
